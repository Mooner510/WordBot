<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            <pattern>%d{HH:mm:ss.SSS} %boldCyan(%-22.-22thread) %red(%5.5X{jda.shard}) %boldGreen(%-15.-15logger{0}) %highlight(%-6level) %msg%n</pattern>-->
            <pattern>%d{HH:mm:ss.SSS} %boldCyan(%-22.-22thread) %boldGreen(%-16.-16logger{0}) %highlight(%-6level) %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.mooner.wordbot" level="trace"/>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>